//Data Validation of string streams.
#include <iostream>
#include <iomanip>
#include <string>
#include <sstream>
#include <limits>

int main() {
std::cout << std::setw(33) << std::setfill('-') << "" << std::endl << std::endl;  
	int value{};
	std::string entry{};
	bool done = false;
	do {
		std::cout << "Please enter an integer: ";
		std::cin >> entry;
		std::istringstream validator{ entry };
		if (validator >> value)
			done = true;
		else
			std::cout << "Sorry that is not an integer." << std::endl;
	} while (!done);
=std::cout << std::setw(33) << std::setfill('-') << "" << std::endl << std::endl;
	double value_1{};
	std::string entry_1{};
	bool done_1 = false;
	do {
		std::cout << "Please enter a double: ";
		std::cin >> entry_1;
		std::istringstream validator_1{ entry_1 };
		if (validator_1 >> value_1)
			done_1 = true;
		else
			std::cout << "Sorry that is not a double." << std::endl;
	} while (!done_1);
return 0;
}
